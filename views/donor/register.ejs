          <li class="nav-item"><a href="/dlog" class="nav-link text-danger border-bottom border-danger">Login</a></li>
        </ul>
      </header>
    </div>
    <!-- navbar closed -->

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
      <!-- Jumbotron -->
      <div class="container py-4">
        <div class="row g-0 align-items-center">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="card cascading-right rounded-4" style="
              background: hsla(0, 0%, 100%, 0.55);
              backdrop-filter: blur(30px);
              ">
              <div class="card-body p-5 shadow-5 text-center">
                Donor
                <h2 class="fw-bold mb-5"><span class="text-danger">Sign in</span> now</h2>
                <form action="/dreg" method="post">
                  <div class="d-flex justify-content-between">
                    <!-- Firstname input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">First Name <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="firstname" required/>
                    </div>
                    <!-- Lastname input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">Last Name <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="lastname" required/>
                    </div>
                    <!-- Gender input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">Gender <span class="text-danger">*</span></label>
                      <select class="form-select rounded-3" name="gender" required>
                        <option value="" selected disabled></option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                  </div>
                
                  <div class="d-flex justify-content-center">
                    <!-- Age input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">Age <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="age" required/>
                    </div>
                    <!-- Blood group select option -->
                    <div class="form-outline  m-2 text-start" style=" width: 200px;">
                      <label class="form-label">Blood group <span class="text-danger">*</span></label>
                      <select class="form-select form-control-lg rounded-3" name="blood" required>
                        <option value="" selected disabled>....... &nbsp; &nbsp;</option>
                        <option value="A+" class="text-dark">A+</option>
                        <option value="A-" class="text-dark">A-</option>
                        <option value="B+" class="text-dark">B+</option>
                        <option value="B-" class="text-dark">B-</option>
                        <option value="O+" class="text-dark">O+</option>
                        <option value="O-" class="text-dark">O-</option>
                        <option value="AB-" class="text-dark">AB+</option>
                        <option value="AB-" class="text-dark">AB-</option>
                      </select>
                    </div>
                    <!-- Dob input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">DOB <span class="text-danger">*</span></label>
                      <input type="date" class="form-control rounded-3" name="dob" required/>
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <!-- Email id input -->
                    <div class="form-outline m-2 text-start " style="width: 200px;">
                      <label class="form-label">Email Id <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="email" required/>
                    </div>
                    <!-- phone input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">Phone no <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="phno" required/>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">Password <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="password" required/>
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <!-- City input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">City <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="city" required/>
                    </div>
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">Pincode <span class="text-danger">*</span></label>
                      <input type="text" class="form-control rounded-3" name="pincode" required/>
                    </div>
                
                    <!-- State input -->
                    <div class="form-outline m-2 text-start" style="width: 200px;">
                      <label class="form-label">State <span class="text-danger">*</span></label>
                      <select class="form-select rounded-3"  name="state" required>
                        <option value="">Select State</option>
                        <option value="Kerala">Kerala</option>
                        <option value="Tamil_Nadu">Tamil Nadu</option>
                        <option value="Karnataka">Karnataka</option>
                        <option value="Andra Pradesh">Andra Pradesh</option>
                        <option value="Telangana">Telangana</option>
                        <option value="Maharastra">Maharastra</option>
                        <option value="Chhattisgarh">Chhattisgarh</option>
                        <option value="Odisha">Odisha</option>
                        <option value="Madhya Pradesh">Madhya Pradesh</option>
                        <option value="Gujarat">Gujarat</option>
                        <option value="West Bengal">West Bengal</option>
                        <option value="Jharkhand">Jharkhand</option>
                        <option value="Bihar">Bihar</option>
                        <option value="Uttar Pradesh">Uttar Pradesh</option>
                        <option value="Rajasthan">Rajasthan</option>
                        <option value="Haryana">Haryana</option>
                        <option value="Sikkim">Sikkim</option>
                        <option value="Assam">Assam</option>
                        <option value="Nagaland">Nagaland</option>
                        <option value="Manipur">Manipur</option>
                        <option value="Tripura">Tripura</option>
                        <option value="Mizoram">Mizoram</option>
                        <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                        <option value="Uttarakhand">Uttarakhand</option>
                        <option value="Himachal Pradesh">Himachal Pradesh</option>
                      </select>
                    </div>
                  </div>
                
                  <!-- Submit button -->
                  <input type="submit" class="btn btn-danger rounded-pill btn-block my-4">
                  <!-- Register buttons -->
                  <div class="text-center">
                    <p>Already have an <span class="text-danger">account ?</span></p>
                    <a href="/dlog" type="button"
                      class="btn btn-link border-danger rounded-pill px-4 shadow-lg btn-floating mx-1">
                      <i class="bi bi-person-lock text-danger"></i>
                    </a>
                  </div>
                </form>
                
              </div>
            </div>
          </div>

          <div class="col-lg-6 mb-5 mb-lg-0">
            <img src="user/images/donor.jpg" class="w-100 rounded-4 shadow-4" alt="" />
          </div>
        </div>
